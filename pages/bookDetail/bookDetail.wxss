/* 轮播图 */
.swiper {
  width: 100%;
  height: 500rpx;
}

.swiper image {
  width: 100%;
  height: 100%;
}

/* 基本信息 */
.info-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.price {
  color: var(--danger-color);
  font-size: 48rpx;
  font-weight: bold;
}

.price::before {
  content: '¥';
  font-size: 32rpx;
  margin-right: 4rpx;
}

.original-price {
  margin-left: 20rpx;
  color: var(--text-color-gray);
  text-decoration: line-through;
  font-size: 28rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--text-color);
}

.meta {
  display: flex;
  gap: 20rpx;
}

.campus, .condition {
  font-size: 24rpx;
  color: var(--text-color-gray);
  background: var(--bg-color);
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}

/* 详细信息 */
.detail-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.label {
  color: var(--text-color-gray);
  font-size: 28rpx;
}

.value {
  color: var(--text-color);
  font-size: 28rpx;
}

/* 详情描述 */
.description-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--text-color);
}

.description {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
}

/* 卖家信息 */
.seller-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 120rpx;
}

.seller-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.seller-detail {
  flex: 1;
}

.nickname {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 8rpx;
  display: block;
}

.credit-score {
  font-size: 24rpx;
  color: var(--text-color-gray);
}

.contact-btn {
  padding: 12rpx 32rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 28rpx;
  border-radius: 32rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
}

.action-item image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.action-item text {
  font-size: 24rpx;
  color: var(--text-color-gray);
}

.buy-btn {
  flex: 1;
  height: 72rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
} 