.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f7f7;
}

/* 聊天列表 */
.chat-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

/* 加载更多 */
.loading {
  text-align: center;
  padding: 20rpx;
  color: var(--text-color-gray);
  font-size: 24rpx;
}

/* 消息项 */
.message-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

.message-item.self {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}

.message-content {
  max-width: 60%;
}

/* 文本消息 */
.text {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: var(--text-color);
  word-break: break-all;
}

.self .text {
  background: var(--primary-color);
  color: #fff;
}

/* 图片消息 */
.image-message {
  max-width: 100%;
  border-radius: 12rpx;
}

/* 商品消息 */
.book-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.book-cover {
  width: 120rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.book-info {
  flex: 1;
}

.book-title {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 12rpx;
  display: block;
}

.book-price {
  font-size: 32rpx;
  color: var(--danger-color);
  font-weight: bold;
}

.book-price::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 4rpx;
}

/* 发送状态 */
.status {
  font-size: 24rpx;
  margin: 8rpx 20rpx;
}

.sending {
  color: var(--text-color-gray);
}

.failed {
  color: var(--danger-color);
}

/* 输入区域 */
.input-section {
  background: #fff;
  border-top: 1rpx solid var(--border-color);
  padding: 20rpx;
}

/* 工具栏 */
.toolbar {
  display: flex;
  margin-bottom: 20rpx;
}

.tool-item {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.tool-item image {
  width: 100%;
  height: 100%;
}

/* 输入框 */
.input-box {
  display: flex;
  align-items: center;
}

.input-box input {
  flex: 1;
  height: 72rpx;
  background: var(--bg-color);
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background: var(--bg-color);
  color: var(--text-color-gray);
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.send-btn.active {
  background: var(--primary-color);
  color: #fff;
} 