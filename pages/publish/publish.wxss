.container {
  padding: 30rpx;
}

/* 图片上传 */
.upload-section {
  margin-bottom: 40rpx;
}

.upload-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.upload-item {
  width: 220rpx;
  height: 220rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.upload-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-btn image {
  width: 24rpx;
  height: 24rpx;
}

.add-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed var(--border-color);
}

.add-btn image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 12rpx;
}

.add-btn text {
  font-size: 24rpx;
  color: var(--text-color-gray);
}

.tips {
  font-size: 24rpx;
  color: var(--text-color-gray);
  margin-top: 16rpx;
  display: block;
}

/* 表单区域 */
.form-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: var(--text-color);
}

.required::before {
  content: '*';
  color: var(--danger-color);
  margin-right: 8rpx;
}

input {
  width: 100%;
  height: 80rpx;
  background: var(--bg-color);
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: var(--text-color);
}

textarea {
  width: 100%;
  height: 200rpx;
  background: var(--bg-color);
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: var(--text-color);
}

.picker {
  width: 100%;
  height: 80rpx;
  background: var(--bg-color);
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: var(--text-color);
  display: flex;
  align-items: center;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}

.submit-btn[loading] {
  opacity: 0.7;
} 